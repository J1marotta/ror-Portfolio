.full-height {
  min-height: 100vh;
}

.navbar-bg {
  background-color: #f7f7f7;
}

.main {
	background-color: #4A96AD;
}


.about {
  background-color: #ededed;
}

.portfolio {
  color: #fff;
  background-color: rgb(212, 106, 106);
}
.contact {
  background: url(<%= asset_path 'mail.gif' %>);
  background-repeat: no-repeat;
  background-position: center;
  background-color: darkgrey;

}

.main-navbar a {
  cursor: pointer;
}
#home {
  padding-top: 35vh !important;
}




.buffer{
  padding-top: 20vh !important;
}




.vid-info {
  position: absolute;
	min-height: 20em;
  top: 20%;
  right: 35%;
  width: 33%;
  background: url(<%= asset_path 'mac-min.png' %>);
	background-size: contain;
	background-repeat: no-repeat;
	background-position: bottom;
  color: #fff;
  padding: 1rem;

}
.vid-info h1 {
  font-size: 3rem;
  font-weight: bolder;
  margin-top: 10;
  line-height: 1.2;
}

.vid-info a {
  display: block;
  color: #fff;
  text-decoration: none;
  background: rgba(0,0,0,0.0);
  border-bottom: none;
  margin: auto auto;
  text-align: center;
}
