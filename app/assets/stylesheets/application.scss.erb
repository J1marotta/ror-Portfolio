.vid-info {
  position: absolute;
	min-height: 10em;
  top: 35%;
  right: 18%;
  width: 65%;
  background: url(<%= asset_path 'mac-min.png' %>);
	background-size: contain;
	background-repeat: no-repeat;
	background-position: bottom;
  color: #fff;
  padding: 1rem;

}


.front  {
  font-size: 3rem;
  font-weight: bolder;
  margin-top: 10;
  line-height: 1.2;
}

.vid-info a {
  display: block;
  color: #fff;
  text-decoration: none;
  background: rgba(0,0,0,0.0);
  border-bottom: none;
  margin: auto auto;
  text-align: center;
}
